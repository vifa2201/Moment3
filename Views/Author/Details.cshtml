@model Moment3.Models.AuthorModel

@{
    ViewData["Title"] = "Details";
}

<h1>            @Html.DisplayFor(model => model.Name)</h1>

<div>
    <h4>Information om författaren</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <div>
    <a asp-action="Edit" class="btn btn-danger" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" class="btn btn-standard">Back to List</a>
</div>
</div>

<div class="mt-4">
    <h4>Böcker av @Model.Name</h4>
    <hr />
  
   @foreach (var book in Model.Books)
            {
              <div class="col-md-6 mb-4">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/images/@book.ImageName" class="img-fluid" width="100px" alt="">
                </div>
                <div class="col-md-8">
                    <h5>@book.Title</h5>
                    <p>@book.Description</p>
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="">Mer info om boken</a>
                </div>
            </div>
        </div>
        <hr />
            }

  
</div>
