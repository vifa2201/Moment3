@model Moment3.Models.BookModel

@{
    ViewData["Title"] = "Details";
}



  <div class="row">
    <div class="col-md-6 d-flex align-items-center">
  <img src="~/images/@Html.DisplayFor(model => model.ImageName)" alt="" class="img-fluid mx-auto d-block bookImg">
    </div>
    <div class="col-md-6">
      <h1>   @Html.DisplayFor(model => model.Title)</h1>
      <p>
                @Html.DisplayFor(model => model.Description) 
      </p>
      <p>
               <strong>Författare:</strong>    <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorId">@Html.DisplayFor(model => model.Author.Name)</a>
      </p>
          <p>
               <strong>Kategori:</strong>   @Html.DisplayFor(model => model.Category.Name)
      </p>
      <p><strong>Publiceringsdatum: </strong>    @Html.DisplayFor(model => model.PublishDate)
      </p>
      <div class="line"></div>
      <div class="mt-4 mx-auto">
 <p><strong> Hantera:</strong></p>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-change"><i class="fas fa-pencil-alt"></i> Ändra</a> 
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Radera</a>
    <a asp-action="Index" class="btn btn-standard">Tillbaka till lista</a>
</div>

    
  </div>

    </div>


 
  

